// åˆå§‹åŒ–
document.addEventListener('DOMContentLoaded', function() {
    renderCourses(COURSES_DATA);
    initChat();
    
    // æœå°‹æ¡†å›è»Šéµ
    document.getElementById('searchInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            searchCourses();
        }
    });
});

// æ¸²æŸ“èª²ç¨‹åˆ—è¡¨
function renderCourses(courses) {
    const grid = document.getElementById('courseGrid');
    const noResults = document.getElementById('noResults');
    
    if (courses.length === 0) {
        grid.classList.add('hidden');
        noResults.classList.remove('hidden');
        return;
    }
    
    grid.classList.remove('hidden');
    noResults.classList.add('hidden');
    
    grid.innerHTML = courses.map(course => `
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition-shadow flex flex-col group cursor-pointer" onclick="showCourseDetail('${course.id}')">
            <div class="p-5 flex-1">
                <div class="flex justify-between items-start mb-3">
                    <span class="px-2.5 py-1 rounded text-xs font-bold ${
                        course.type === 'åœ¨è·' 
                        ? 'bg-purple-100 text-purple-700' 
                        : 'bg-green-100 text-green-700'
                    }">
                        ${course.type}
                    </span>
                    <div class="flex items-center gap-1 text-yellow-500 text-xs font-bold">
                        â­ ${course.rating}
                    </div>
                </div>
                
                <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">
                    ${course.title}
                </h3>
                
                <div class="space-y-2 text-sm text-gray-600 mb-4">
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        <span class="truncate">${course.period}</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span class="truncate">${course.time}</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        <span class="truncate">${course.location}</span>
                    </div>
                </div>

                <div class="flex flex-wrap gap-2 mt-auto">
                    ${course.tags.slice(0, 3).map(tag => `
                        <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full">
                            #${tag}
                        </span>
                    `).join('')}
                </div>
            </div>

            <div class="p-4 border-t border-gray-100 bg-gray-50 rounded-b-xl flex items-center justify-between">
                <div>
                    <div class="text-xs text-gray-500">è£œåŠ©è³‡è¨Š</div>
                    <div class="text-sm font-bold text-green-600">
                        ${course.subsidyLabel || (course.price === 0 ? 'å…è²»' : `NT$ ${course.price.toLocaleString()}`)}
                    </div>
                </div>
                <button class="flex items-center gap-1 text-blue-600 font-medium hover:text-blue-800 transition-colors">
                    è©³ç´°è³‡è¨Š
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                </button>
            </div>
        </div>
    `).join('');
}

// æœå°‹èª²ç¨‹
function searchCourses() {
    const searchTerm = document.getElementById('searchInput').value.trim();
    currentFilter.searchTerm = searchTerm;
    applyFilters();
}

// å¿«é€Ÿæœå°‹
function quickSearch(term) {
    document.getElementById('searchInput').value = term;
    searchCourses();
}

// æŒ‰é¡å‹ç¯©é¸
function filterByType(type) {
    currentFilter.type = type;
    
    // æ›´æ–°æŒ‰éˆ•æ¨£å¼
    document.querySelectorAll('.filter-btn').forEach(btn => {
        if (btn.dataset.type === type) {
            btn.classList.add('bg-blue-100', 'text-blue-700');
            btn.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:bg-gray-50');
        } else {
            btn.classList.remove('bg-blue-100', 'text-blue-700');
            btn.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:bg-gray-50');
        }
    });
    
    applyFilters();
}

// æ‡‰ç”¨æ‰€æœ‰ç¯©é¸æ¢ä»¶
function applyFilters() {
    let filtered = COURSES_DATA;
    
    // é¡å‹ç¯©é¸
    if (currentFilter.type !== 'å…¨éƒ¨') {
        filtered = filtered.filter(c => c.type === currentFilter.type);
    }
    
    // æœå°‹è©ç¯©é¸
    if (currentFilter.searchTerm) {
        const term = currentFilter.searchTerm.toLowerCase();
        filtered = filtered.filter(c => 
            c.title.toLowerCase().includes(term) ||
            c.tags.some(t => t.toLowerCase().includes(term)) ||
            c.domain.toLowerCase().includes(term) ||
            c.category.toLowerCase().includes(term)
        );
    }
    
    // Chatbot é ˜åŸŸç¯©é¸
    if (currentFilter.chatbotDomain.length > 0) {
        filtered = filtered.filter(c => 
            currentFilter.chatbotDomain.some(d => 
                c.domain.includes(d) || 
                c.category.includes(d) ||
                c.title.includes(d) ||
                c.tags.some(t => t.includes(d))
            )
        );
    }
    
    // Chatbot åœ°é»ç¯©é¸
    if (currentFilter.chatbotLocation.length > 0) {
        filtered = filtered.filter(c => 
            currentFilter.chatbotLocation.some(l => 
                c.location.includes(l) ||
                c.location.includes('ç·šä¸Š') ||
                c.location.includes('ç›´æ’­')
            )
        );
    }
    
    renderCourses(filtered);
    
    // é¡¯ç¤º/éš±è—ç¯©é¸æç¤º
    const hasFilters = currentFilter.chatbotDomain.length > 0 || currentFilter.chatbotLocation.length > 0;
    document.getElementById('filterInfo').classList.toggle('hidden', !hasFilters);
    document.getElementById('filterInfo').classList.toggle('flex', hasFilters);
}

// æ¸…é™¤ç¯©é¸
function clearFilters() {
    currentFilter = {
        type: 'å…¨éƒ¨',
        searchTerm: '',
        chatbotDomain: [],
        chatbotLocation: []
    };
    document.getElementById('searchInput').value = '';
    filterByType('å…¨éƒ¨');
    applyFilters();
}

// é¡¯ç¤ºèª²ç¨‹è©³æƒ…
function showCourseDetail(courseId) {
    const course = COURSES_DATA.find(c => c.id === courseId);
    if (!course) return;
    
    const modal = document.getElementById('courseModal');
    const content = document.getElementById('modalContent');
    
    content.innerHTML = `
        <div class="p-6">
            <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                        <span class="px-2.5 py-1 rounded text-xs font-bold ${
                            course.type === 'åœ¨è·' 
                            ? 'bg-purple-100 text-purple-700' 
                            : 'bg-green-100 text-green-700'
                        }">
                            ${course.type}
                        </span>
                        <span class="text-sm text-gray-500">${course.domain}</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">${course.title}</h2>
                    <div class="flex items-center gap-3 text-sm text-gray-600">
                        <div class="flex items-center gap-1">
                            â­ ${course.rating}
                        </div>
                        <div>å°±æ¥­ç‡: ${course.employmentRate}</div>
                    </div>
                </div>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 p-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            
            <div class="space-y-4 mb-6">
                <div class="flex items-center gap-3 text-gray-700">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                    <span>${course.period}</span>
                </div>
                <div class="flex items-center gap-3 text-gray-700">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    <span>${course.time}</span>
                </div>
                <div class="flex items-center gap-3 text-gray-700">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                    <span>${course.location}</span>
                </div>
            </div>
            
            <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                <div class="text-sm text-green-700 mb-1">ğŸ’° è£œåŠ©è³‡è¨Š</div>
                <div class="text-xl font-bold text-green-700">
                    ${course.subsidyLabel || (course.price === 0 ? 'å…¨é¡è£œåŠ©' : `NT$ ${course.price.toLocaleString()}`)}
                </div>
            </div>
            
            <div class="mb-6">
                <div class="text-sm font-bold text-gray-700 mb-2">èª²ç¨‹æ¨™ç±¤</div>
                <div class="flex flex-wrap gap-2">
                    ${course.tags.map(tag => `
                        <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm">
                            #${tag}
                        </span>
                    `).join('')}
                </div>
            </div>
            
            <div class="mb-6">
                <div class="text-sm font-bold text-gray-700 mb-2">å ±åæ­¥é©Ÿ</div>
                <ol class="space-y-2">
                    ${course.nextSteps.map((step, i) => `
                        <li class="flex items-start gap-2">
                            <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-xs">${i+1}</span>
                            <span class="text-gray-700">${step}</span>
                        </li>
                    `).join('')}
                </ol>
            </div>
            
            <div class="flex gap-3">
                <a href="${course.link}" target="_blank" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-3 rounded-lg font-bold transition-colors">
                    å‰å¾€å ±å
                </a>
                <button onclick="closeModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition-colors">
                    é—œé–‰
                </button>
            </div>
        </div>
    `;
    
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

// é—œé–‰è©³æƒ…å½ˆçª—
function closeModal(event) {
    if (event && event.target.id !== 'courseModal') return;
    document.getElementById('courseModal').classList.add('hidden');
    document.body.style.overflow = '';
}

// Chatbot åŠŸèƒ½
function toggleChat() {
    const chatWindow = document.getElementById('chatWindow');
    const chatButton = document.getElementById('chatButton');
    
    if (chatWindow.classList.contains('hidden')) {
        chatWindow.classList.remove('hidden');
        chatButton.classList.add('hidden');
    } else {
        chatWindow.classList.add('hidden');
        chatButton.classList.remove('hidden');
    }
}

function initChat() {
    addBotMessage(
        'å—¨ï¼æˆ‘æ˜¯æ‚¨çš„è·æ¶¯é ˜èˆªå“¡ ğŸš€ã€‚æº–å‚™å¥½é–‹å•Ÿæ–°èˆªé“äº†å—ï¼Ÿç‚ºäº†å¹«æ‚¨å°‹æ‰¾åˆé©çš„è£œåŠ©èª²ç¨‹ï¼Œè«‹å…ˆå‘Šè¨´æˆ‘æ‚¨ç›®å‰çš„ç‹€æ…‹æ˜¯ï¼Ÿ',
        [
            { label: 'ğŸš€ å……é›»å†å‡ºç™¼ (å¾…æ¥­)', value: 'è·å‰', desc: 'æ‰¾å…¨é¡è£œåŠ©è·å‰è¨“ç·´' },
            { label: 'âš¡ è·å ´å‡ç´šä¸­ (åœ¨è·)', value: 'åœ¨è·', desc: 'ä¸‹ç­é€²ä¿®ã€ä¸‰å¹´ä¸ƒè¬' },
            { label: 'ğŸ“ æ–°æ‰‹æ‘æ¢éšª (é’å¹´)', value: 'è·å‰', desc: 'ç”¢æ¥­æ–°å°–å…µè¨ˆç•«' }
        ]
    );
}

function addBotMessage(text, options = null, courses = null) {
    const messagesContainer = document.getElementById('chatMessages');
    
    const messageDiv = document.createElement('div');
    messageDiv.className = 'flex justify-start';
    
    let optionsHTML = '';
    if (options && options.length > 0) {
        optionsHTML = '<div class="mt-4 space-y-2">' + 
            options.map(opt => `
                <button onclick="handleOptionClick('${opt.value}', '${opt.label}')" 
                    class="w-full text-left p-3 rounded-xl border border-gray-200 hover:border-blue-500 hover:bg-blue-50 transition-all bg-white group">
                    <div class="font-bold text-blue-900 group-hover:text-blue-600">${opt.label}</div>
                    ${opt.desc ? `<div class="text-xs text-gray-500 mt-1">${opt.desc}</div>` : ''}
                </button>
            `).join('') +
        '</div>';
    }
    
    let coursesHTML = '';
    if (courses && courses.length > 0) {
        coursesHTML = '<div class="mt-4 space-y-3">' +
            courses.map(course => `
                <div class="bg-blue-50 p-3 rounded-xl border border-blue-100">
                    <div class="flex justify-between items-start mb-1">
                        <span class="text-xs font-bold text-blue-600 bg-blue-200 px-1.5 py-0.5 rounded">${course.type}</span>
                        <span class="text-xs text-gray-500">${course.domain}</span>
                    </div>
                    <h4 class="font-bold text-gray-800 text-sm mb-1">${course.title}</h4>
                    <div class="text-xs text-gray-600 space-y-0.5">
                        <div>ğŸ“ ${course.location}</div>
                        <div>ğŸ’° ${course.subsidyLabel || (course.price === 0 ? 'å…è²»' : `$${course.price.toLocaleString()}`)}</div>
                    </div>
                    <button onclick="showCourseDetail('${course.id}')" class="mt-2 w-full py-1.5 bg-blue-600 text-white text-xs rounded font-medium hover:bg-blue-700">
                        æŸ¥çœ‹è©³æƒ…
                    </button>
                </div>
            `).join('') +
        '</div>';
    }
    
    messageDiv.innerHTML = `
        <div class="max-w-[85%] bg-white text-gray-800 border border-gray-200 rounded-2xl p-4 shadow-sm">
            <div class="whitespace-pre-line leading-relaxed">${text}</div>
            ${optionsHTML}
            ${coursesHTML}
        </div>
    `;
    
    messagesContainer.appendChild(messageDiv);
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
}

function addUserMessage(text) {
    const messagesContainer = document.getElementById('chatMessages');
    
    const messageDiv = document.createElement('div');
    messageDiv.className = 'flex justify-end';
    messageDiv.innerHTML = `
        <div class="max-w-[85%] bg-blue-600 text-white rounded-2xl p-4 shadow-sm">
            ${text}
        </div>
    `;
    
    messagesContainer.appendChild(messageDiv);
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
}

function handleOptionClick(value, label) {
    addUserMessage(label);
    
    setTimeout(() => {
        if (chatPhase === 'INIT') {
            chatPreferences.type = value;
            chatPhase = 'INTEREST';
            currentFilter.type = value;
            filterByType(value);
            
            addBotMessage(
                'äº†è§£ï¼æ‚¨æƒ³åœ¨å“ªå€‹ **ã€é ˜åŸŸã€** å……é›»å‡ç´šå‘¢ï¼Ÿ',
                [
                    { label: 'ğŸ’» è³‡è¨Šç§‘æŠ€', value: 'è³‡è¨Šç§‘æŠ€' },
                    { label: 'ğŸ“Š å•†æ¥­ç®¡ç†', value: 'å•†æ¥­ç®¡ç†' },
                    { label: 'ğŸ”§ ç¶­ä¿®å·¥ç¨‹', value: 'ç¶­ä¿®å·¥ç¨‹' },
                    { label: 'ğŸ¨ è¨­è¨ˆå¤šåª’é«”', value: 'è¨­è¨ˆå¤šåª’é«”' },
                    { label: 'â˜• é¤é£²è§€å…‰', value: 'é¤é£²è§€å…‰' },
                    { label: 'ğŸ—£ï¸ èªè¨€æºé€š', value: 'èªè¨€æºé€š' },
                    { label: 'ğŸ¥ é†«ç™‚ç…§è­·', value: 'é†«ç™‚ç…§è­·' }
                ]
            );
        } else if (chatPhase === 'INTEREST') {
            chatPreferences.domain = [value];
            chatPhase = 'LOCATION';
            currentFilter.chatbotDomain = [value];
            applyFilters();
            
            addBotMessage(
                'å¥½çš„ï¼Œæœ€å¾Œç¢ºèªåº§æ¨™ã€‚ç‚ºäº†æ–¹ä¾¿æ‚¨ä¸Šèª²ï¼Œæ‚¨å¸Œæœ›åœ¨ **å“ªå€‹åœ°å€**ï¼Ÿ',
                [
                    { label: 'å°åŒ—', value: 'å°åŒ—' },
                    { label: 'æ–°åŒ—', value: 'æ–°åŒ—' },
                    { label: 'å°ä¸­', value: 'å°ä¸­' },
                    { label: 'é«˜é›„', value: 'é«˜é›„' },
                    { label: 'æ¡ƒåœ’', value: 'æ¡ƒåœ’' },
                    { label: 'å°å—', value: 'å°å—' },
                    { label: 'ç·šä¸Š/ç›´æ’­', value: 'ç·šä¸Š' }
                ]
            );
        } else if (chatPhase === 'LOCATION') {
            chatPreferences.location = [value];
            chatPhase = 'RESULT';
            currentFilter.chatbotLocation = [value];
            applyFilters();
            
            // ç¯©é¸èª²ç¨‹
            let filtered = COURSES_DATA.filter(c => {
                if (chatPreferences.type && c.type !== chatPreferences.type) return false;
                if (chatPreferences.domain.length > 0) {
                    const matchDomain = chatPreferences.domain.some(d => 
                        c.domain.includes(d) || c.category.includes(d) || c.title.includes(d)
                    );
                    if (!matchDomain) return false;
                }
                if (value !== 'ç·šä¸Š') {
                    if (!c.location.includes(value) && !c.location.includes('ç·šä¸Š') && !c.location.includes('ç›´æ’­')) {
                        return false;
                    }
                }
                return true;
            });
            
            if (filtered.length > 0) {
                addBotMessage(
                    `å°èˆªåƒæ•¸è¨­å®šå®Œæˆï¼æ ¹æ“šæ‚¨çš„éœ€æ±‚ï¼Œæˆ‘ç‚ºæ‚¨æ‰¾åˆ° **${filtered.length}** å ‚æœ€é€Ÿé…çš„èª²ç¨‹ï¼š`,
                    null,
                    filtered.slice(0, 3)
                );
            } else {
                const popularCourses = getPopularCourses(3);
                addBotMessage(
                    `å¾ˆæŠ±æ­‰ï¼Œåœ¨ ${value} æ²’æœ‰æ‰¾åˆ°ç¬¦åˆæ¢ä»¶çš„èª²ç¨‹ã€‚\n\nä¸éæˆ‘ç‚ºæ‚¨æ¨è–¦ä»¥ä¸‹ç†±é–€èª²ç¨‹ï¼Œä¾›æ‚¨åƒè€ƒï¼š`,
                    null,
                    popularCourses
                );
            }
        }
    }, 600);
}

function sendMessage() {
    const input = document.getElementById('chatInput');
    const message = input.value.trim();
    if (!message) return;
    
    addUserMessage(message);
    input.value = '';
    
    setTimeout(() => {
        const popularCourses = getPopularCourses(3);
        addBotMessage(
            'æˆ‘é‚„åœ¨å­¸ç¿’ç†è§£æ‚¨çš„éœ€æ±‚ã€‚ä¸éæ²’é—œä¿‚ï¼è®“æˆ‘ç‚ºæ‚¨æ¨è–¦ä»¥ä¸‹ç†±é–€èª²ç¨‹ï¼š',
            null,
            popularCourses
        );
    }, 800);
}

function handleShortcut(type) {
    if (type === 'ç†±é–€') {
        addUserMessage('æˆ‘æƒ³çœ‹çœ‹ç†±é–€èª²ç¨‹');
        setTimeout(() => {
            const popularCourses = getPopularCourses(6);
            currentFilter.searchTerm = '';
            currentFilter.type = 'å…¨éƒ¨';
            renderCourses(popularCourses);
            addBotMessage(
                `ğŸ”¥ **ç†±é–€èª²ç¨‹æ¨è–¦**\n\nä»¥ä¸‹æ˜¯ç›®å‰æœ€å—æ­¡è¿çš„èª²ç¨‹ï¼Œè©•åˆ†å’Œå°±æ¥­ç‡éƒ½å¾ˆé«˜ï¼š`,
                null,
                popularCourses.slice(0, 3)
            );
        }, 600);
    } else {
        addUserMessage(`æ‰¾${type}èª²ç¨‹`);
        chatPhase = 'INIT';
        chatPreferences = { type: type, domain: [], location: [] };
        currentFilter.type = type;
        filterByType(type);
        handleOptionClick(type, `æ‰¾${type}èª²ç¨‹`);
    }
}

function restartChat() {
    chatPhase = 'INIT';
    chatPreferences = { type: null, domain: [], location: [] };
    clearFilters();
    document.getElementById('chatMessages').innerHTML = '';
    initChat();
}

function getPopularCourses(limit) {
    return [...COURSES_DATA]
        .sort((a, b) => {
            const scoreA = parseFloat(a.rating) * 10 + parseFloat(a.employmentRate);
            const scoreB = parseFloat(b.rating) * 10 + parseFloat(b.employmentRate);
            return scoreB - scoreA;
        })
        .slice(0, limit);
}
    </script>

</body>
</html>
